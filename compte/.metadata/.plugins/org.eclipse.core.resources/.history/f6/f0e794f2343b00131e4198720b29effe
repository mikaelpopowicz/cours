public class Epargne extends Compte {
	private float taux;

	/**
	 * Constructeur 
	 */
	public Epargne() {
		super();
		this.setTaux(0);
	}
	
	/**
	 * Constructeur avec paramtres
	 * @param nom
	 * @param prenom
	 * @param numero
	 * @param solde
	 * @param taux
	 */
	public Epargne(String nom, String prenom, int numero, float solde, float taux) {
		super(nom, prenom, numero, solde);
		this.setTaux(taux);
	}
	
	public float getTaux() {
		return taux;
	}

	public void setTaux(float taux) {
		this.taux = taux;
	}
	
	public void ouvrir() {
		super.ouvrir();
		System.out.println("\nSaisir le taux -> ");
		this.setTaux(Console.saisirFloat());
	}
	
	public String afficher() {
		String aff = "";
		aff += "";
		aff += "\nCompte n¡ "+this.getTaux()+"\n";
		super.afficher();
	}
}
